@model Hotels.ViewModels.BuyViewModel
@{
    ViewBag.Title = "Buy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Buy</h2>

<div class="form-group">
    @Html.LabelFor(m => m.ReservationId)
    @Html.DropDownListFor(m => m.ReservationId, new SelectList(Model.Reservations, "Id", "Guest.FirstName"), "Select Reservation", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.ReservationId)
</div>
<div class="form-group">
    @Html.LabelFor(model => model.Amount)
    @Html.TextBoxFor(model => model.Amount, new { Class = "form-control" })
    @Html.ValidationMessageFor(model => model.Amount)
</div>