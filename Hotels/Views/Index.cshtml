    <!-- Edit Room modal -->
    <div class="modal fade" id="edit-room-modal" tabindex="-1" role="dialog" aria-labelledby="editRoomModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close pull-right" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h5 class="modal-title" id="editRoomModalLabel">Room edit</h5>
                </div>
                <div class="modal-body">

                    <input type="hidden" class="form-control" id="editRoomId">
                    <input type="hidden" class="form-control" id="editRoomStatus">
                    <div class="form-group">
                        <label for="editRoomName">Room Name</label>
                        <input type="text" class="form-control" id="editRoomName" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="editRoomTypeId">Select Room Type</label>
                        <select class="form-control" id="editRoomTypeId">
                            <option>1</option>
                            <option>2</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button id="updateRoom" type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Room modal -->
    <div class="modal fade" id="add-room-modal" tabindex="-1" role="dialog" aria-labelledby="addRoomModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close pull-right" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h5 class="modal-title" id="addRoomModalLabel">Add New Room</h5>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="addRoomName">Room name</label>
                        <input type="text" class="form-control" id="addRoomName" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="addRoomTypeId">Select room</label>
                        <select class="form-control" id="addRoomTypeId">
                            <option value="1">Single Bed</option>
                            <option value="2">Double Bed</option>
                            <option value="3">Triple Bed</option>
                            <option value="4">Penthouse</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button id="addRoom" type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/Api.js"></script>
    <script src="~/Scripts/Reservations.js"></script>
    <script src="~/Scripts/Guests.js"></script>
    <script src="~/Scripts/Rooms.js"></script>
    <script src="~/Scripts/Invoices.js"></script>
    <script src="~/Scripts/Room.js"></script>
</body>
</html>